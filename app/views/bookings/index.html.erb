<div>
  <h1> All Bookings </h1>

  <div class="container">
    <div class="row">
        <div class="col-md-12 scrollable">
          <table class="table">
            <tr>
              <th class="status">Status</th>
              <th class="user">User</th>
              <th class="quantity">Quantity</th>
              <th class="desc">Description</th>
              <th class="time">Start Time</th>
              <th class="time">End Time</th>
              <th class="empty"></th>
              <th class="empty"></th>
              <th class="empty"></th>
            </tr>
            <% @bookings.each do |b| %>
              <tr>
                <td class="status"><%= b.status %></td>
                <td class="user"><%= User.find(b.user_id)&.username %></td>
                <td class="quantity"><%= b.quantity %></td>
                <td class="desc"><%= b.description %></td>
                <td class="time"><%= b.start_time.strftime('%a, %d %b %Y %H:%M:%S') %></td>
                <td class="time"><%= b.end_time.strftime('%a, %d %b %Y %H:%M:%S') %></td>
                <td class="show"><%= link_to 'Show more', booking_path(b) %></td>
                <td class="edit">
                  <% if b.status == "pending" || can?(:show_full, User)%>
                    <%= link_to 'Edit Booking', edit_booking_path(b) %>
                  <% end %>  
                </td>  
                <% if can?(:show_full, User) %>
                  <% if b.status == "approved" %>
                    <td></td>
                    <td><%= form_tag(booking_path(b.id), method: "patch") do %>
                    <%= button_tag("Reject", name: 'status', value: :rejected,
                      type: 'submit', class: "btn")%>
                    <% end %> </td>  
                  <% elsif b.status == "rejected" %>
                    <td><%= form_tag(booking_path(b.id), method: "patch") do %>
                    <%= button_tag("Approve", name: 'status', value: :approved,
                        type: 'submit', class: "btn")%>
                    <% end %> </td> 
                  <% else %>
                    <td><%= form_tag(booking_path(b.id), method: "patch") do %>
                    <%= button_tag("Approve", name: 'status', value: :approved,
                        type: 'submit', class: "btn")%>
                    <% end %></td>
                    <td><%= form_tag(booking_path(b.id), method: "patch") do %>
                    <%= button_tag("Reject", name: 'status', value: :rejected,
                        type: 'submit', class: "btn")%>
                    <% end %></td> 
                  <% end %>
                <% end %>
              </tr>
            <% end %>
          </table>
      </div>
    </div>
  </div>

  <div>
    <%= button_to("Make New Booking", new_booking_path, method: "get", class: "btn btn-info booking-btn inline") %></li>
  </div>
</div>