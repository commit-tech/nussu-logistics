<div>
  <h1>Item Details</h1>

  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <table class="show-item-table">
          <tr>
            <th class="name">Name:</th>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <th class="desc">Description:</th>
            <td><%= @item.description %></td>
          </tr>
          <tr>
            <th class="quantity">Quantity:</th>
            <td><%= @item.quantity %></td>
          </tr>
        </table>
        <%= button_to("Back To Items List", items_path,
        method: "get", class: "return-btn test") %>
      </div>
    </div>
  </div>
</div>
