<div class="list">
  <h1>Items List</h1>

  <div class="container">
    <div class="row">
      <div class="col-md-12 scrollable">

        <table>
          <tr>
            <th class="name">Name</th>
            <th class="desc">Description</th>
            <th class="quantity">Quantity</th>
            <th class="more">More details</th>

          </tr>
          <% @items.each do |i| %>
            <tr>
              <td class="name"><%= i.name %></td>
              <td class="desc"><%= i.description %></td>
              <td class="quantity"><%= i.quantity %></td>
              <td class="more"><%= link_to 'Show Full Details', item_path(i) %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
